<!doctype html>
<html lang="en">

<head>
    <%- include('head') %>
</head>

<body>
    <div class="container">
        <div class="m-5 d-flex flex-column justify-content-center">
            <div class="fs-1 my-4 me-auto ms-auto">Request Reset Link</div>
            <!-- message -->
            <div id="message" class="alert alert-info w-25 me-auto ms-auto" role="alert"></div>
            <!-- reset pass form -->
            <div class="my-4 w-25 me-auto ms-auto">
                <form>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email" required>
                    </div>
                    <button id="request-link" type="button" class="btn btn-outline-success">Request</button>
                    <a href="http://localhost:3112/home/" class="btn btn-outline-danger">Go Back</a>
                </form>
            </div>
        </div>

        <div class="container position-absolute bottom-0">
            <%- include('footer') %>
        </div>
    </div>

    <!-- scripts -->
    <%- include('scripts', { loggedin: loggedin }) %>
    <script src="/js/req-reset.js"></script>
</body>

</html>